//Default pixel shader to sample the texture to the pixel

sampler texsampler = sampler_state
{
	Texture = <texsamp>;
	MAGFILTER = LINEAR;
	MINFILTER = LINEAR;
	MIPFILTER = LINEAR;
};

struct Vertex3D
{
	float4 vposition : POSITION0;
	float2 tposition : TEXCOORD0;
	float4 color : COLOR0;
};

float4 ps_main( in Vertex3D data ) : COLOR
{
	return tex2D( texsampler, data.tposition.xy ) * data.color;
}